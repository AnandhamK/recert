# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,js}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{html}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[{package.json,bower.json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
